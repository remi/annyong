#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

require "rubygems"
require "fileutils"
require "optparse"
require "rack"
require "annyong"

application = Annyong::Application.new(ARGV)

Rack::Server.start({
  :config      => File.join(File.dirname(__FILE__), "../assets/rack/config.ru"),
  :Port        => application.port,
  :Host        => application.host,
  :AccessLog   => [],
})
